<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242526"
    tools:context=".form">

    <EditText
        android:id="@+id/stay"
        android:layout_width="233dp"
        android:layout_height="52dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/bglined"
        android:ems="10"
        android:hint="Staying For"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:textColorHint="@color/slate" />

    <EditText
        android:id="@+id/date"
        android:layout_width="229dp"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bglined"
        android:ems="10"
        android:hint="When"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stay"
        tools:textColorHint="@color/slate" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="156dp"
        android:backgroundTint="@color/pblu"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="94dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="cursive"
        android:text="Order"
        android:textAlignment="center"
        android:textColor="#FDEEF4"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backk"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_back" />

</androidx.constraintlayout.widget.ConstraintLayout>